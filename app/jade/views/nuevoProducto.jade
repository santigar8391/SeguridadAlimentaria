div.modal.fade
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button", ng-click="close('Cancel')", data-dismiss="modal", aria-hidden="true") &times;
        h1 Añadir producto

      div.modal-body
        label Descripción:
        input(type="text", ng-model="nuevoProducto.descripcion")
        br
        label Grupo:
        select(ng-model="nuevoProducto", ng-options="g.num_grupo as g.desc_grupo for g in awesomeThings")
        button.btn.btn-success(ng-click="guardarProducto()") Guardar


